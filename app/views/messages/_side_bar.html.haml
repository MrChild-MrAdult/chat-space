.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        .icons__btn
        = link_to new_group_path, method: :get, class: "icons__btn--edit" do
          = icon('far', 'edit', class: "icons__btn--icon")
        = link_to edit_user_path(current_user), class: "icons__btn--cog" do
          = icon('fas', 'cog', class: "icons__btn--icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .chat-list
        = link_to group_messages_path(group) do
          .chat-list__group-name
            = group.name
          .chat-list__latest-message
            = group.show_last_message